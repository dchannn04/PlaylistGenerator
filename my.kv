<ButtonWindow>

    song_title: song_title
    FloatLayout:
        size: root.width, root.height/2

        Button:
            pos_hint:{"x":0.4, "y": 0.5}
            size_hint: 0.2, 0.2
            text: "Generate"
            on_release:
                root.manager.transition.direction="left"
                root.generate()


        Label:
            text: "Enter Song Name: "
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y": 0.35}
            font_size: (30)

        TextInput:
            pos_hint: {"x":0.354, "y": 0.34}
            size_hint: 0.28, 0.065
            id: song_title

        Button:
            pos_hint:{"x":0.424, "y": 0.72}
            size_hint: 0.15, 0.13
            text: "Profile"
            on_release:
                root.manager.transition.direction = "left"
                root.swap()

<CreateAccount>:
    name: "create"

    username: username
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (30)

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Username: "
                font_size: (25)

            TextInput:
                pos_hint: {"x":0.4, "top":0.8}
                size_hint: 0.3, 0.12
                id: username
                multiline: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (25)

            TextInput:
                pos_hint: {"x":0.4, "top":0.8-0.13}
                size_hint: 0.3, 0.12
                id: email
                multiline: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (25)

            TextInput:
                pos_hint: {"x":0.4, "top":0.8-0.13*2}
                size_hint: 0.3, 0.12
                id: passw
                multiline: True
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.59, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.43 , "top":0.87}
            size_hint: 0.35, 0.1

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.43, "top":0.68}
            size_hint: 0.35, 0.1

        Button:

            pos_hint:{"x":0.25,"y":0.3}
            size_hint: 0.5, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "down"
                root.loginBtn()

        Button:

            pos_hint:{"x":0.3,"y":0.18}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One!"
            on_release:
                root.manager.transition.direction = "up"
                root.createBtn()

